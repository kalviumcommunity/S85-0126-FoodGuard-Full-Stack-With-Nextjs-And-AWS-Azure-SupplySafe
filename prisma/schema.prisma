generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  password  String
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  orders    Order[]
  suppliers Supplier[]

  @@map("users")
}

model Supplier {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  phone       String?
  address     String?
  description String?
  verified    Boolean   @default(false)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("suppliers")
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String?
  category    String
  price       Float
  unit        String
  imageUrl    String?
  inStock     Boolean     @default(true)
  supplierId  String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  batches     Batch[]
  supplier    Supplier    @relation(fields: [supplierId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Order {
  id           String      @id @default(uuid())
  orderNumber  String      @unique
  status       OrderStatus @default(PENDING)
  totalAmount  Float
  deliveryDate DateTime?
  notes        String?
  userId       String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  orderItems   OrderItem[]
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Float
  orderId   String
  productId String
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

enum Role {
  USER
  SUPPLIER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}


model File {
  id        String   @id @default(uuid())
  name      String
  path      String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())

  @@map("files")
}

model Batch {
  id               String     @id @default(uuid())
  batchNumber      String     @unique
  productId        String
  supplierId       String
  manufacturingDate DateTime
  expiryDate       DateTime
  storageConditions String?
  quantity         Float
  unit             String
  qrCodeUrl        String?
  currentLocation  String?
  status           BatchStatus @default(ACTIVE)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  movements        BatchMovement[]
  product          Product    @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("batches")
}

model BatchMovement {
  id          String           @id @default(uuid())
  batchId     String
  fromLocation String?
  toLocation   String
  quantity     Float
  unit         String
  movementType MovementType
  notes        String?
  createdAt    DateTime         @default(now())
  batch        Batch            @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@map("batch_movements")
}

enum BatchStatus {
  ACTIVE
  EXPIRED
  RECALLED
  DISPOSED
}

enum MovementType {
  RECEIVED
  TRANSFERRED
  USED
  DISPOSED
  RECALLED
}
